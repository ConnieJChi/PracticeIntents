<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Happiness is a blessing!"
        android:layout_margin="15sp"
        android:theme="@style/BasicTheme" />

    <TextView
        android:theme="@style/BasicTheme"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="We should aim to obtain happiness!"
        android:layout_margin="15sp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Click the button to send a happy email to your friend!~"
        android:layout_margin="15sp"
        android:theme="@style/BasicTheme" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:text="Send Happy Email!"
        android:onClick="clicked"/>

</LinearLayout>